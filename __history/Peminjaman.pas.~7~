unit Peminjaman;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, ZAbstractConnection,
  ZConnection, Data.DB, ZAbstractRODataset, ZAbstractDataset, ZDataset;

type
  TForm5 = class(TForm)
    QueryPeminjaman: TZQuery;
    QueryMember: TZQuery;
    PeminjamanCon: TZConnection;
    QueryMemberid_member: TZIntegerField;
    QueryMembername: TZUnicodeStringField;
    QueryMemberemail: TZUnicodeStringField;
    ComboBox1: TComboBox;
    procedure FormCreate(Sender: TObject);
  private
  { Private declaration }
  public
    { Public declarations }
  end;

var
  Form5: TForm5;

implementation

{$R *.dfm}

uses Member, Unit1, Unit2, Unit3;

procedure TForm5.FormCreate(Sender: TObject);
begin
// Clear existing items
  ComboBox1.Items.Clear;

  // Open the query to fetch authors from the database
  QueryMember.Close;
  QueryBuku.SQL.Text := 'SELECT title FROM buku ORDER BY title';
  QueryBuku.Open;

  // Populate the combobox with author names
  while not QueryBuku.Eof do
  begin
    ComboBox1.Items.Add(QueryBuku.FieldByName('title').AsString);
    QueryBuku.Next;
  end;

  // Close the query after fetching data
  QueryBuku.Close;
end;

end.

